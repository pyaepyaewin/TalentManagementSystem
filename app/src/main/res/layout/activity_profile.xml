<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.activities.ProfileActivity"
        android:background="@drawable/color">
    <androidx.cardview.widget.CardView
            android:layout_width="50dp"
            android:layout_height="50dp"
            app:cardCornerRadius="25dp"
            android:layout_marginTop="30dp"
            android:layout_marginStart="30dp"
            app:cardBackgroundColor="@color/backColor">
        <ImageView
                android:id="@+id/arrow"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/arrow"
                android:scaleType="center"/>
    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView android:layout_width="100dp"
                                       android:layout_height="100dp"
                                       app:cardCornerRadius="50dp"
                                       android:layout_centerHorizontal="true" android:layout_marginTop="50dp">
        <ImageView
                android:id="@+id/userProfile"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/avi"/>
    </androidx.cardview.widget.CardView>

    <TextView
            android:id="@+id/name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Chan Myae Khine"
            android:textSize="24sp"
            android:fontFamily="@font/apercu_regular"
            android:layout_marginTop="160dp"
            android:layout_centerHorizontal="true"

    />
    <TextView android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="Track"
              android:fontFamily="@font/apercu_regular"
              android:textSize="17sp"
              android:textColor="#fff"
              android:layout_marginTop="200dp"
              android:layout_marginStart="130dp"
    />
    <TextView android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="Batch"
              android:fontFamily="@font/apercu_regular"
              android:textSize="17sp"
              android:layout_marginTop="200dp"
              android:textColor="#fff"
              android:layout_marginStart="220dp"/>
    <TextView
            android:id="@+id/track"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="PHP"
            android:fontFamily="@font/apercu_regular"
            android:textSize="20sp"
            android:layout_marginTop="230dp"
            android:layout_marginStart="130dp"/>
    <TextView
            android:id="@+id/batch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1"
            android:fontFamily="@font/apercu_regular"
            android:textSize="20sp"
            android:layout_marginTop="230dp"
            android:layout_marginStart="235dp"/>
    <LinearLayout android:layout_width="match_parent"
                  android:layout_height="480dp"
                  android:background="@drawable/maincorner"
                  android:layout_marginTop="280dp"
                  android:orientation="vertical">
        <LinearLayout android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:orientation="horizontal">
            <TextView android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:text="DOB"
                      android:fontFamily="@font/apercu_bold"
                      android:textSize="20sp"
                      android:layout_marginTop="30dp"
                      android:layout_marginStart="30dp"/>
            <TextView
                    android:id="@+id/dob"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="12/5/1997"
                    android:fontFamily="@font/apercu_regular"
                    android:layout_marginStart="50dp"
                    android:layout_marginTop="30dp"
                    android:textSize="20sp"/>

        </LinearLayout>
        <LinearLayout android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:orientation="horizontal">
            <TextView android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:text="Email"
                      android:fontFamily="@font/apercu_bold"
                      android:textSize="20sp"
                      android:layout_marginTop="20dp"
                      android:layout_marginStart="30dp"/>
            <TextView
                    android:id="@+id/email"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="chanchan123@gmail.com"
                    android:fontFamily="@font/apercu_regular"
                    android:textSize="20sp"
                    android:layout_marginStart="45dp"
                    android:layout_marginTop="20dp"/>
        </LinearLayout>
        <LinearLayout android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:orientation="horizontal">
            <TextView android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:text="Ph_no"
                      android:fontFamily="@font/apercu_bold"
                      android:textSize="20sp"
                      android:layout_marginTop="20dp"
                      android:layout_marginStart="30dp"/>
            <TextView
                    android:id="@+id/phNum"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="09971797730"
                    android:fontFamily="@font/apercu_regular"
                    android:textSize="20sp"
                    android:layout_marginStart="42dp"
                    android:layout_marginTop="20dp"/>
        </LinearLayout>
        <LinearLayout android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:orientation="horizontal">
            <TextView android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:text="Address"
                      android:fontFamily="@font/apercu_bold"
                      android:textSize="20sp"
                      android:layout_marginTop="20dp"
                      android:layout_marginStart="30dp"/>
            <TextView
                    android:id="@+id/address"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="N0.203,KyunChan Street,Kamayut Twp"
                    android:fontFamily="@font/apercu_regular"
                    android:textSize="20sp"
                    android:layout_marginStart="30dp"
                    android:layout_marginTop="20dp"/>
        </LinearLayout>
        <androidx.cardview.widget.CardView android:layout_width="300dp"
                                           android:layout_height="50dp"
                                           android:layout_marginTop="30dp"
                                           android:layout_gravity="center"
                                           app:cardCornerRadius="10dp"
        >
            <Button
                    android:id="@+id/btnChangePsw"
                    android:layout_width="300dp"
                    android:layout_height="match_parent"
                    android:text="Change Password"
                    android:fontFamily="@font/apercu_regular"
                    android:background="@color/gradient"
                    android:textColor="@color/white"
                    android:textAllCaps="false"

            />
        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView android:layout_width="300dp"
                                           android:layout_height="50dp"
                                           android:layout_marginTop="20dp"
                                           android:layout_gravity="center"
                                           app:cardCornerRadius="10dp"
        >
            <Button
                    android:id="@+id/btnLogout"
                    android:layout_width="300dp"
                    android:layout_height="match_parent"
                    android:text="Log Out"
                    android:fontFamily="@font/apercu_regular"
                    android:background="@color/orange"
                    android:textColor="@color/white"
                    android:textAllCaps="false"

            />
        </androidx.cardview.widget.CardView>

    </LinearLayout>
</RelativeLayout>
