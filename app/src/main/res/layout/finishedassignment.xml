<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="140dp"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:gravity="center"
            >
    <androidx.cardview.widget.CardView android:layout_width="380dp"
                                       android:layout_height="100dp"
                                       app:cardCornerRadius="10dp"
                                       android:layout_marginTop="10dp"

    app:cardBackgroundColor="@color/finishBg"

   >
        <androidx.cardview.widget.CardView
                android:layout_width="50dp"
                android:layout_height="50dp"
                app:cardCornerRadius="25dp"
                android:layout_marginTop="20dp"
                android:layout_marginStart="20dp"
        >
            <ImageView
                    android:id="@+id/finish"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/finish"
                    android:scaleType="center"/>
        </androidx.cardview.widget.CardView>
        <TextView
                android:id="@+id/assignmentTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Laravel Basic"
                android:fontFamily="@font/apercu_bold"
                android:textSize="20sp"
                android:layout_marginTop="20dp"
                android:layout_marginStart="80dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="by"
            android:fontFamily="@font/apercu_regular"
            android:textSize="15sp"
            android:layout_marginStart="80dp"
            android:layout_marginTop="50dp"/>
    <TextView
            android:id="@+id/teacherName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tr.Kyant"
            android:fontFamily="@font/apercu_regular"
            android:layout_marginTop="50dp"
            android:layout_marginStart="100dp"
            android:textColor="@color/notiColor"
            android:textSize="15sp"/>

        <TextView
                android:id="@+id/duedate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Due Date "
                android:layout_marginStart="240dp"
                android:layout_marginTop="50dp"/>
    <TextView
            android:id="@+id/date"
            android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="July 14"
              android:layout_marginStart="300dp"
              android:layout_marginTop="50dp"/>
</androidx.cardview.widget.CardView>
</LinearLayout>
