<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content" xmlns:app="http://schemas.android.com/apk/res-auto"
              android:orientation="vertical"

>

    <androidx.cardview.widget.CardView android:layout_width="match_parent"
                                       android:layout_height="80dp"
                                       android:layout_gravity="center"

                                       app:cardCornerRadius="20dp"
                                       android:layout_marginLeft="10dp"
                                       android:layout_marginRight="10dp"
                                       android:layout_marginBottom="10dp"
    >
        <TextView
                android:id="@+id/time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="10am-12pm"
                android:fontFamily="@font/apercu_regular"
                android:textSize="14sp"
                android:layout_marginTop="10dp"
                android:layout_marginStart="30dp"/>
        <TextView
                android:id="@+id/course"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Normalization"
                android:fontFamily="@font/apercu_bold"
                android:textSize="20sp"
                android:layout_marginStart="30dp"
                android:layout_marginTop="30dp"/>
        <TextView
                android:id="@+id/teacherName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tr.Chaw Chaw Htay"
                android:fontFamily="@font/apercu_regular"
                android:layout_marginTop="60dp"
                android:layout_marginStart="30dp"
                android:textColor="@color/notiColor"
                android:textSize="14sp"/>
        <TextView
                android:id="@+id/duration"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Duration 1:00"
                android:textSize="14sp"
                android:layout_marginStart="250dp"
                android:layout_marginTop="50dp"/>
    </androidx.cardview.widget.CardView>
</LinearLayout>
