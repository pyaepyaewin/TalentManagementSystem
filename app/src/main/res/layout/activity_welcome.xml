<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.activities.WelcomeActivity"
        android:background="@drawable/welcomepage"
        android:orientation="vertical">
    <androidx.cardview.widget.CardView
            android:layout_width="240dp"
            android:layout_height="240dp"
            tools:layout_editor_absoluteY="85dp"
            tools:layout_editor_absoluteX="8dp"
            android:layout_marginTop="120dp"
           android:layout_gravity="center"
            app:cardCornerRadius="120dp"

    >
        <ImageView android:layout_width="150dp"
                   android:layout_height="150dp"
                   android:src="@drawable/talent"
                   android:layout_marginTop="47dp"
                   android:layout_marginStart="43dp"


        />
    </androidx.cardview.widget.CardView>
    <TextView android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="Welcome"
              android:fontFamily="@font/apercu_bold"
              android:textSize="41sp"
              android:layout_gravity="center"
              android:layout_marginTop="20dp"
    />
    <Button
            android:id="@+id/btnStart"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:layout_marginRight="25dp"
            android:layout_marginLeft="25dp"
            android:layout_gravity="center"
            android:background="@drawable/buttonround"
            android:layout_marginTop="80dp"
            android:text="Getting Started"
            android:fontFamily="@font/apercu_regular"
            android:textColor="@color/colorGradient"
    android:textAllCaps="false"/>

</androidx.appcompat.widget.LinearLayoutCompat>