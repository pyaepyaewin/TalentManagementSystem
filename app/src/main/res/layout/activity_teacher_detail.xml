        <!--<ImageView-->
                <!--android:id="@+id/teacherImage"-->
                <!--android:layout_width="166dp"-->
                   <!--android:layout_height="166dp"-->
        <!--android:src="@drawable/teacher"-->
        <!--android:scaleType="fitCenter"/>-->
    <!--</androidx.cardview.widget.CardView>-->
    <de.hdodenhof.circleimageview.CircleImageView android:layout_width="166dp"
                                                  android:layout_height="166dp"
    android:src="@drawable/teacher"
    android:layout_gravity="center"
    app:civ_border_color="@color/white"
    app:civ_border_width="2dp"
    android:layout_marginTop="20dp"
    android:scaleType="fitCenter"/>
    <TextView
            android:id="@+id/teacherName"
            android:layout_width="wrap_content"
              android:layout_height="wrap_content"
    android:text="Tr Alex"
            android:textColor="@color/bold"
    android:fontFamily="@font/apercu_bold"
    android:textSize="24sp"
    android:layout_gravity="center"
    android:layout_marginTop="10dp"/>
    <LinearLayout android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
    android:orientation="horizontal">
<TextView android:layout_width="wrap_content"
          android:layout_height="wrap_content"
android:text="position   :"
android:fontFamily="@font/apercu_regular"
android:textSize="20sp"
android:textColor="@color/articleColor"
android:layout_marginStart="30dp"
android:layout_marginTop="30dp"/>
        <TextView
                android:id="@+id/teacherPosition"
                android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:text="Android Developer"
                  android:fontFamily="@font/apercu_regular"
                  android:textSize="22sp"
                android:textColor="@color/bold"
                  android:layout_marginStart="30dp"
                  android:layout_marginTop="30dp"/>

    </LinearLayout>
    <LinearLayout android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:orientation="horizontal">
        <TextView android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:text="company :"
                  android:fontFamily="@font/apercu_regular"
                  android:textSize="20sp"
                  android:textColor="@color/articleColor"
                  android:layout_marginStart="30dp"
                  android:layout_marginTop="10dp"/>
        <TextView
                android:id="@+id/company"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ace Plus"
                android:fontFamily="@font/apercu_regular"
                android:textSize="22sp"
                android:textColor="@color/bold"
                android:layout_marginStart="30dp"
                android:layout_marginTop="10dp"/>

    </LinearLayout>
    <LinearLayout android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:orientation="horizontal">
        <TextView android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:text="module    :"
                  android:fontFamily="@font/apercu_regular"
                  android:textSize="20sp"
                  android:textColor="@color/articleColor"
                  android:layout_marginStart="30dp"
                  android:layout_marginTop="10dp"/>
        <TextView
                android:id="@+id/module"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Prototyping"
                android:fontFamily="@font/apercu_regular"
                android:textSize="22sp"
                android:textColor="@color/bold"
                android:layout_marginStart="30dp"
                android:layout_marginTop="10dp"/>

    </LinearLayout>
    <LinearLayout android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:orientation="horizontal">
        <TextView android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:text="email        :"
                  android:fontFamily="@font/apercu_regular"
                  android:textSize="20sp"
                  android:textColor="@color/articleColor"
                  android:layout_marginStart="30dp"
                  android:layout_marginTop="10dp"/>
        <TextView
                android:id="@+id/email"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="alex.pro@gmail.com"
                android:fontFamily="@font/apercu_regular"
                android:textSize="22sp"
                android:textColor="@color/bold"
                android:layout_marginStart="30dp"
                android:layout_marginTop="10dp"/>

    </LinearLayout>
</androidx.appcompat.widget.LinearLayoutCompat>