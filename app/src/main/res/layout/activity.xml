<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:orientation="horizontal">
    <androidx.cardview.widget.CardView android:layout_width="380dp"
                                       android:layout_height="wrap_content"
                                       app:cardCornerRadius="20dp"
                                       app:cardElevation="3dp"
    android:layout_marginTop="20dp"
    android:layout_marginStart="15dp"
   >
        <ImageView
                android:id="@+id/image"
                android:layout_width="80dp"
                   android:layout_height="120dp"
                   android:layout_marginStart="8dp"

        android:src="@drawable/pic1"/>
        <TextView
                android:id="@+id/title"
                android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
        android:text="Business Ethic"
        android:fontFamily="@font/apercu_bold"
        android:textSize="24sp"
        android:layout_marginStart="100dp"
        android:layout_marginTop="10dp"/>
        <TextView android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
        android:text="speak by"
                  android:fontFamily="@font/apercu_regular"
                  android:textSize="20sp"
                  android:textColor="@color/clearNotiColor"
                  android:layout_marginStart="100dp"
                  android:layout_marginTop="40dp"
        />
        <TextView
                android:id="@+id/speaker"
                android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:text=" Ko Lynn Theint Nyut"
                  android:fontFamily="@font/apercu_regular"
                  android:textSize="20sp"
                  android:textColor="@color/notiColor"
                  android:layout_marginStart="180dp"
                  android:layout_marginTop="40dp"
        />
        <TextView
                android:id="@+id/time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="10am-12pm(Jul 7)"
                android:layout_marginTop="80dp"
                android:fontFamily="@font/apercu_regular"
                android:textSize="14sp"
                android:layout_marginStart="230dp"
                android:textColor="@color/clearNotiColor"/>
    </androidx.cardview.widget.CardView>

</LinearLayout>
