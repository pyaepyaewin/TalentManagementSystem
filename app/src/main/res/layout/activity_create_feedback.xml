<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.activities.Feedback.CreateFeedbackActivity"
android:orientation="vertical">
    <LinearLayout android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:orientation="horizontal">
        <androidx.cardview.widget.CardView
                android:layout_width="50dp"
                android:layout_height="50dp"
                app:cardCornerRadius="25dp"
                android:layout_marginTop="30dp"
                android:layout_marginStart="30dp"
                app:cardBackgroundColor="@color/backColor">
            <ImageView
                    android:id="@+id/arrow"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/arrow"
                    android:scaleType="center"/>
        </androidx.cardview.widget.CardView>
        <TextView android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:text="Feedback"
                  android:fontFamily="@font/apercu_bold"
                  android:textSize="30sp"
                  android:layout_marginStart="10dp"
                  android:layout_marginTop="35dp"/>
        <androidx.cardview.widget.CardView
                android:layout_width="70dp"
                android:layout_height="70dp"
                app:cardCornerRadius="50dp"
                android:layout_marginTop="20dp"
                android:layout_marginStart="60dp"
        >
            <ImageView android:layout_width="match_parent"
                       android:layout_height="match_parent"
                       android:src="@drawable/feedback"
                       android:scaleType="centerInside"
            />
        </androidx.cardview.widget.CardView>

    </LinearLayout>
    <EditText
            android:id="@+id/edtTitle"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:layout_margin="30dp"
            android:hint="Title"
            android:textColor="@color/white"
            android:textColorHint="@color/white"
            android:fontFamily="@font/apercu_light"
            android:paddingLeft="15dp"
            android:textSize="20sp"
            android:background="@drawable/edittextround"
    android:backgroundTint="@color/darkBlue"/>
    <EditText
            android:id="@+id/edtDescription"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:gravity="top"
            android:layout_gravity="center"
            android:layout_marginLeft="30dp"
                    android:layout_marginRight="30dp"
            android:hint="Description "
            android:textColor="@color/white"
            android:textColorHint="@color/white"
            android:fontFamily="@font/apercu_light"
            android:paddingLeft="15dp"
            android:textSize="20sp"
            android:background="@drawable/edittextround"
    android:backgroundTint="@color/darkBlue"/>
    <Button
            android:id="@+id/btnCreate"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:layout_gravity="center"
            android:background="@drawable/buttonround"
            android:layout_margin="30dp"
            android:text="Create"
            android:textAllCaps="false"
            android:fontFamily="@font/apercu_regular"
            android:textColor="@color/white"
    android:backgroundTint="@color/notiColor"/>
</androidx.appcompat.widget.LinearLayoutCompat>