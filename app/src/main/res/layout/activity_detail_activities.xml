<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.activities.Activity.DetailActivitiesActivity"
        android:orientation="vertical">
    <RelativeLayout android:layout_width="match_parent" android:layout_height="wrap_content">
        <androidx.cardview.widget.CardView
                android:layout_width="50dp"
                android:layout_height="50dp"
                app:cardCornerRadius="25dp"
                android:layout_marginTop="30dp"
                android:layout_marginStart="30dp"
                app:cardBackgroundColor="@color/backColor">
            <ImageView
                    android:id="@+id/arrow"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/arrow"
                    android:scaleType="center"/>
        </androidx.cardview.widget.CardView>
        <TextView
                android:id="@+id/activityTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Business Ethics"
                android:layout_marginStart="100dp"
                android:layout_marginTop="30dp"
                android:fontFamily="@font/apercu_bold"
                android:textSize="24sp"/>
        <TextView android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:text="speak by "
                  android:fontFamily="@font/apercu_regular"
                  android:textSize="18sp"
                  android:textColor="@color/clearNotiColor"
                  android:layout_marginTop="55dp"
                  android:layout_marginStart="100dp"/>
        <TextView
                android:id="@+id/speaker"
                android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:text=" Ko Lynn Theint Nyut"
                  android:fontFamily="@font/apercu_regular"
                  android:textSize="18sp"
                  android:textColor="@color/clearNotiColor"
                  android:layout_marginTop="55dp"
                  android:layout_marginStart="180dp"/>
        <androidx.cardview.widget.CardView
                android:id="@+id/love"
                android:layout_width="35dp"
                android:layout_height="35dp"
                app:cardCornerRadius="20dp"
                android:layout_marginTop="35dp"
                android:layout_marginStart="360dp"
                app:cardBackgroundColor="@color/clearNotiColor"
        >
            <ImageView android:layout_width="match_parent"
                       android:layout_height="match_parent"
                       android:src="@drawable/love"
                       android:scaleType="center"/>

        </androidx.cardview.widget.CardView>

    </RelativeLayout>
    <androidx.cardview.widget.CardView
            android:layout_width="380dp"
            android:layout_height="200dp"
            app:cardCornerRadius="20dp"
            android:layout_marginStart="12dp"
            android:layout_marginTop="20dp"
    >
        <ImageView
                android:id="@+id/activityImage"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/pic1"
                android:scaleType="fitXY"/>

    </androidx.cardview.widget.CardView>
    <TextView
            android:id="@+id/description1"
            android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="Lorem Ipsum is simply dummy text of the printing and typesetting industry. Lorem Ipsum has been the industry's standard dummy text ever since the 1500s,when an unknown printer took a galley of type and scrambled it to make a type specimen book."
              android:fontFamily="@font/apercu_regular"
              android:textSize="18sp"
              android:layout_marginTop="10dp"
              android:layout_marginStart="10dp"
    />



</androidx.appcompat.widget.LinearLayoutCompat>