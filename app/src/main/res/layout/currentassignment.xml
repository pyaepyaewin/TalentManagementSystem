<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
>
    <androidx.cardview.widget.CardView android:layout_width="380dp"
                                       android:layout_height="100dp"
                                       android:layout_marginTop="30dp"
                                       android:layout_marginStart="20dp"
                                       app:cardCornerRadius="20dp">
        <androidx.cardview.widget.CardView
                android:layout_width="50dp"
                android:layout_height="50dp"
                app:cardCornerRadius="25dp"
                android:layout_marginTop="20dp"
                android:layout_marginStart="20dp"
        >
            <ImageView
                    android:id="@+id/finish"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/finish"
                    android:scaleType="centerCrop"/>
        </androidx.cardview.widget.CardView>
        <TextView
                android:id="@+id/assignmentTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="CSS frame"
                android:fontFamily="@font/apercu_bold"
                android:textSize="20sp"
                android:layout_marginTop="20dp"
                android:layout_marginStart="80dp"/>
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="by"
                android:fontFamily="@font/apercu_regular"
                android:textSize="15sp"
                android:layout_marginStart="80dp"
                android:layout_marginTop="50dp"/>
        <TextView
                android:id="@+id/teacherName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tr.Kyant"
                android:fontFamily="@font/apercu_regular"
                android:layout_marginTop="50dp"
                android:layout_marginStart="100dp"
                android:textColor="@color/notiColor"
                android:textSize="15sp"/>
        <TextView android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:text="Due date July 14"
                  android:layout_marginStart="220dp"
                  android:layout_marginTop="40dp"/>
    </androidx.cardview.widget.CardView>

</LinearLayout>
